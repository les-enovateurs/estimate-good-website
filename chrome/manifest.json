{
  "description": "Display EcoIndex Score",
  "manifest_version": 3,
  "name": "EcoSurf Analyser",
  "version": "1.5",
  "homepage_url": "https://github.com/les-enovateurs/estimate-good-website",
  "default_locale": "fr",
  "background": {
    "service_worker": "analysis.js"
  },
  "options_page": "options/options.html",
  "action": {
    "default_icon": {
      "16": "icons/16/A.jpg",
      "32": "icons/A.jpg"
    },
    "default_title": "EcoSurf Analyser",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["badge/badge.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'none'; form-action 'none'"
  }
}
