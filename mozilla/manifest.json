{
  "description": "Display EcoIndex Score",
  "manifest_version": 3,
  "name": "EcoSurf Analyser",
  "version": "1.7",
  "homepage_url": "https://github.com/les-enovateurs/estimate-good-website",
  "default_locale": "fr",
  "background": {
    "scripts": ["llm-impact/llm-tracker.js", "analysis.js"]
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "page_action": {
    "default_icon": {
      "16": "icons/16/A.jpg",
      "32": "icons/A.jpg"
    },
    "default_title": "EcoSurf Analyser",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.openai.com/*",
        "*://*.chatgpt.com/*",
        "*://*.claude.ai/*",
        "*://*.anthropic.com/*",
        "*://*.gemini.google.com/*",
        "*://*.bing.com/chat*"
      ],
      "js": ["llm-impact/content-script.js"]
    }
  ],
  "host_permissions": [
    "*://*.openai.com/*",
    "*://*.chatgpt.com/*",
    "*://*.claude.ai/*",
    "*://*.anthropic.com/*",
    "*://*.gemini.google.com/*",
    "*://*.bing.com/chat*"
    ],
  "browser_specific_settings": {
    "gecko": {
      "id": "bbe1cfbd-4983-4c8a-b4eb-5a460f1f9da8@les-enovateurs"
    },
    "gecko_android": {
      "id": "9b7bb08d-d20a-43cc-8f0a-6cc0940bdc4e@les-enovateurs"
    }
  }
}
